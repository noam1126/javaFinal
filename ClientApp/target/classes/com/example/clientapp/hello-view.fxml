<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.clientapp.HelloApplicationController">

  <!-- Book Details Input -->
  <TextField fx:id="nameField" promptText="Name"/>
  <TextField fx:id="descriptionField" promptText="Description"/>
  <TextField fx:id="authorField" promptText="Author"/>
  <TextField fx:id="yearField" promptText="Year"/>

  <!-- Save Button -->
  <Button text="Save" onAction="#onSaveButtonClick"/>

  <!-- Book List -->
  <ListView fx:id="bookListView"/>

  <!-- Buttons for Update and Remove -->
  <HBox>
    <Button text="Update" onAction="#onUpdateButtonClick"/>
    <Button text="Remove" onAction="#onRemoveButtonClick"/>
  </HBox>

</VBox>
